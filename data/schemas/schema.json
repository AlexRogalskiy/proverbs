{
    "$id": "https://github.com/AlexRogalskiy/proverbs/blob/master/data/schemas.json",
    "description": "A representation of a proverb data object",
    "type": "object",
    "patternProperties": {
        "^.+$": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": false,
            "items": {
                "$ref": "#/$defs/proverb"
            }
        }
    },
    "$defs": {
        "proverb": {
            "type": "object",
            "properties": {
                "text": {
                    "type": "string",
                    "description": "Proverb text"
                },
                "description": {
                    "type": "string",
                    "description": "Proverb description"
                },
                "category": {
                    "type": "string",
                    "description": "Proverb category"
                }
            },
            "required": [
                "text",
                "description",
                "category"
            ]
        }
    },
    "required": [
        "english"
    ]
}
